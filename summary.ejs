<!DOCTYPE html>
<html>
<head>
  <title>Summary Report</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">Toy Summary Report</h2>

    <div class="card mb-3">
      <div class="card-body">
        <h5>Total Toys: <strong><%= summary.total %></strong></h5>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h5>Average Toy Price: <strong>$<%= summary.avg_price %></strong></h5>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5>Toys by Category</h5>
        <ul class="list-group">
          <% summary.categories.forEach(cat => { %>
            <li class="list-group-item d-flex justify-content-between">
              <span><%= cat.product_category %></span>
              <span><%= cat.count %></span>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>

    <div class="mt-4">
      <a href="/index" class="btn btn-secondary">Back to Product Page</a>
    </div>
  </div>
</body>
</html>
