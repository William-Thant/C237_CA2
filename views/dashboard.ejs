<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Users</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/adminregister">Add Users</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
    <br>
    <div class="text-center"><h2>User Information</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">User Name</th>
            <th width="100">Image</th>
            <th width='100'>Email</th>
            <th width="50">Address</th>
            <th width="50">Contact</th>
            
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < users.length; i++) { %>
          <tr>
            
            <td><a href="/user/<%= users[i].id %>"><%= users[i].username %></a></td>
            <td><img src="<%= users[i].image %>" width="20%"></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].address %></td>
            <td><%= users[i].contact %></td>
            <td><%= users[i].role %></td>
            <!--Edit Link-->
            <td><a href="/edituser/<%= users[i].id %>">Edit</a></td>
            <!--Delete Link-->
            <td><a href="/deleteuser/<%= users[i].id %>" onclick= "return confirm('Are you sure you want to delete this user?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <a class="btn btn-primary" href="/">Log out</a>
    <a class="btn btn-primary" href="/productdashboard">Product page</a>
  </div>
</body>
</html>
