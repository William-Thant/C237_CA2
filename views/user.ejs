<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #000 !important;
        }

        .navbar-brand,
        .nav-link {
            color: white !important;
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: bold;
        }

        h2 {
            font-weight: bold;
            margin: 30px 0 20px;
        }

        .table-container {
            background-color: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .table th, .table td {
            vertical-align: middle;
            font-size: 0.95rem;
            padding: 12px 15px;
        }

        .table img {
            width: 90px;
            height: auto;
            border-radius: 6px;
        }

        .btn {
            margin-right: 10px;
        }

        form.d-flex {
            margin-left: auto;
        }

        @media (max-width: 768px) {
            .table img {
                width: 60px;
            }
        }
    </style>
    <title>User App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">User App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/adduser">Add User</a>
                
              </li>
              <form class="d-flex" action="/search" method="get">
            <input class="form-control me-2" type="search" name="productName" placeholder="Search products" aria-label="Search">
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>user Details</h2></div>
        <br>
        <% if (user) { %> <!-- Check if product data exists -->
            <div>
                <p><b>User Name:</b><br> <%= user.username %></p>
                <p><b>User Image:</b><br> <img src = "<%= user.image %>" width="20%"></p>
                <p><b>User Email:</b><br> <%= user.email %></p>
                <p><b>user Address:</b><br> <%= user.address %></p>
                <p><b>user Contact:</b><br> <%= user.contact %></p> 
                <p><b>user Role:</b><br> <%= user.role %></p> 
            </div>
        <% } else { %>
            <p>No User found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
