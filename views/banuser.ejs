<!DOCTYPE html>
<html>
<head>
    <title>User App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand,
        .nav-link {
            color: white !important;
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: bold;
        }

        .container {
            padding-top: 30px;
            padding-bottom: 50px;
        }

        h2 {
            font-weight: bold;
            color: #333;
        }

        .form-container {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-primary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        .form-control::placeholder {
            color: #6c757d;
        }

        .form-control {
            background-color: white;
            color: black;
        }

        .form-label {
            font-weight: 600;
        }

        .btn {
            width: 100%;
        }

        .text-center h2 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">User App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="text-center mb-4">
            <h2>Ban User</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/banuser" method="POST" class="p-4 shadow form-container">
                    <div class="mb-3">
                        <label for="username" class="form-label">Ban User:</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="ban_reason" class="form-label">Reason For Ban</label>
                        <textarea id="ban_reason" name="ban_reason" class="form-control" rows="5" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="ban_start" class="form-label">Ban Start Date:</label>
                        <input type="date" id="ban_start" name="ban_start" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="ban_end" class="form-label">Ban End Date:</label>
                        <input type="date" id="ban_end" name="ban_end" class="form-control" required>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4">Start Ban</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
