<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f7f9fa;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.09);
            padding: 40px 32px 32px 32px;
            max-width: 380px;
            width: 100%;
            margin: 30px 0;
        }
        .super-logo {
            display: block;
            margin: 0 auto 25px auto;
            height: 38px;
        }
        .secure-label {
            color: #8a8a8a;
            font-size: 1rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 7px;
            font-weight: 500;
        }
        .login-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 22px;
            color: black;
            text-align: center;
        }
        .form-label {
            font-weight: 500;
        }
        .btn-login {
            background-color: blue;
            border: none;
            color: #fff;
            font-weight: 600;
            font-size: 1.09rem;
            margin-top: 15px;
            padding: 9px 0;
        }
        .btn-login:hover, .btn-login:focus {
            background: darkblue;
            color: #fff;
        }
        .form-check {
            margin-top: 15px;
        }
        .link, .link:visited {
            font-size: 0.98rem;
            margin-top: 13px;
            display: inline-block;
            color: #0066cc;
            text-decoration: underline;
        }
        .link:hover, .link:focus {
            color: #004999;
        }
        .link.text-muted {
            color: #707070 !important;
        }
        .links-row {
            margin-top: 13px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="secure-label">
            <i class="bi bi-lock-fill"></i>
            Secure Site
        </div>
        <div class="login-title">Login</div>

        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(error => { %><p><%= error %></p><% }) %>
            </div>
        <% } %>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(msg => { %><p><%= msg %></p><% }) %>
            </div>
        <% } %>

        <form action="/login" method="POST" autocomplete="off">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" id="email"
                       value="<%= remembered?.email || '' %>" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password"
                       value="<%= remembered?.password || '' %>" required>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="rememberMe" id="rememberMe"
                       <%= remembered ? 'checked' : '' %>>
                <label class="form-check-label" for="rememberMe">Remember Me</label>
            </div>
            <button type="submit" class="btn btn-login w-100">Log In</button>
        </form>
        <div class="links-row">
            <a href="/forget" class="link text-muted">Forget Me</a>
        </div>
        <div class="links-row">
            <a href="/register" class="link">Donâ€™t have an account? Sign Up</a>
        </div>
    </div>

    <div class="login-right"></div>
</body>
</html>
