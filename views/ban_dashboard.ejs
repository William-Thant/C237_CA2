<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand,
        .nav-link {
            color: white !important;
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: bold;
        }

        h2 {
            font-weight: bold;
            margin-bottom: 30px;
        }

        .table img {
            width: 80px;
            height: auto;
            border-radius: 6px;
        }

        .table th, .table td {
            vertical-align: middle;
            font-size: 0.95rem;
        }

        .btn {
            margin: 5px;
        }

        .container {
            padding-top: 30px;
            padding-bottom: 50px;
        }

        .thead-dark th {
            background-color: #343a40;
            color: white;
        }

        .text-center h2 {
            color: #333;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">Admin View</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/adminregister">Add Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/banuser">Ban Users</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="text-center">
            <h2>Ban User Information</h2>
        </div>

        <table class="table table-bordered table-hover text-center">
            <thead class="thead-dark">
                <tr>
                    <th width="100">Ban User</th>
                    <th width="200">Ban Reason</th>
                    <th width="150">Ban Start</th>
                    <th width="150">Ban End</th>
                    <th width ="150">Ban User Eamil</th>
                    <th colspan="2" width="150">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < banuser.length; i++) { %>
                    <tr>
                        <td><a href="/ban/<%= banuser[i].banuserid %>"><%= banuser[i].username %></a></td>
                        <td><%= banuser[i].ban_reason %></td>
                        <td><%= new Date(banuser[i].ban_start).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                        <td><%= new Date(banuser[i].ban_end).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                        <td><%= banuser[i].email %></td>
                        <td><a class="btn btn-sm btn-warning" href="/editbanuser/<%= banuser[i].banuserid %>">Edit</a></td>
                        <td><a class="btn btn-sm btn-danger" href="/deleteBanuser2/<%= banuser[i].banuserid %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a class="btn btn-secondary" href="/">Log Out</a>
            <a class="btn btn-primary" href="/dashboard">Dashboard</a>
        </div>
    </div>

    <!-- Bootstrap JS for navbar toggler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
