<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f4f6f9;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      color: #2c3e50;
    }

    /* Navbar improvements */
    .navbar {
      background-color: #222 !important;
      padding: 1rem 1.2rem;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.75rem;
      color: #f9f9f9 !important;
      letter-spacing: 1px;
    }

    .nav-link {
      color: #cbd5e1 !important;
      margin-right: 20px;
      font-weight: 500;
      transition: color 0.25s ease;
    }

    .nav-link:hover {
      color: #f4b41a !important;
      text-decoration: underline;
    }

    /* Search form */
    form.d-flex {
      margin-left: auto;
      gap: 10px;
    }

    form.d-flex input.form-control {
      border-radius: 25px;
      padding-left: 15px;
      font-size: 0.9rem;
      width: 220px;
      border: 1.5px solid #ced4da;
      transition: border-color 0.3s ease;
    }

    form.d-flex input.form-control:focus {
      border-color: #f4b41a;
      box-shadow: 0 0 5px #f4b41a;
      outline: none;
    }

    form.d-flex button.btn-outline-light {
      border-radius: 25px;
      padding: 6px 18px;
      font-weight: 600;
      font-size: 0.9rem;
      border-color: #f4b41a;
      color: #f4b41a;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    form.d-flex button.btn-outline-light:hover {
      background-color: #f4b41a;
      color: #222;
      border-color: #f4b41a;
    }

    form.d-flex a.btn-warning {
      border-radius: 25px;
      padding: 6px 18px;
      font-weight: 600;
      font-size: 0.9rem;
      box-shadow: 0 3px 8px rgba(244, 180, 26, 0.3);
      transition: box-shadow 0.3s ease;
    }

    form.d-flex a.btn-warning:hover {
      box-shadow: 0 5px 15px rgba(244, 180, 26, 0.6);
    }

    /* Container and heading */
    .container {
      max-width: 1000px;
      margin-top: 40px;
      margin-bottom: 40px;
      background: white;
      padding: 35px 40px 45px 40px;
      border-radius: 12px;
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.08);
    }

    h2 {
      font-weight: 700;
      color: #34495e;
      margin-bottom: 30px;
      text-align: center;
      letter-spacing: 0.6px;
    }

    /* Table styling */
    .table {
      border-collapse: separate;
      border-spacing: 0 12px;
    }

    .table thead th {
      background-color: #34495e;
      color: white;
      border: none;
      font-weight: 600;
      padding: 14px 0;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .table tbody tr {
      background-color: #fefefe;
      border-radius: 10px;
      box-shadow: 0 3px 7px rgba(0, 0, 0, 0.04);
      transition: background-color 0.25s ease;
    }

    .table tbody tr:hover {
      background-color: #f9f9f9;
    }

    .table td, .table th {
      vertical-align: middle;
      text-align: center;
      padding: 16px 12px;
      border-top: none;
      color: #2c3e50;
      font-weight: 500;
    }

    .table img {
      width: 90px;
      height: auto;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
      cursor: pointer;
    }

    .table img:hover {
      transform: scale(1.1);
    }

    /* Action links */
    .table a {
      text-decoration: none;
      font-weight: 600;
      color: #34495e;
      padding: 6px 12px;
      border-radius: 6px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .table a:hover {
      background-color: #f4b41a;
      color: white;
    }

    /* Buttons below the table */
    .btn-primary {
      border-radius: 30px;
      padding: 10px 28px;
      font-weight: 600;
      letter-spacing: 0.05em;
      margin-right: 15px;
      box-shadow: 0 6px 18px rgba(52, 73, 94, 0.15);
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #2c3e50;
    }

    /* Responsive tweaks */
    @media (max-width: 768px) {
      .table img {
        width: 60px;
      }

      .navbar-brand {
        font-size: 1.4rem;
      }

      .container {
        padding: 25px 20px 30px 20px;
      }

      form.d-flex {
        flex-direction: column;
        gap: 8px;
      }

      form.d-flex input.form-control {
        width: 100%;
      }

      form.d-flex button, form.d-flex a {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">User App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addproduct">Add Toy</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/summary">Summary</a>
          </li>
          <li>
            <a class="nav-link" href="/searchuserform">Search User</a>
          </li>
        </ul>

        <form class="d-flex" action="/search" method="get">
          <input class="form-control me-2" type="search" name="productName" placeholder="Search products" aria-label="Search" />
          <button class="btn btn-outline-light" type="submit">Search</button>
          <a href="/searchproductform" class="btn btn-warning">Search & Filter</a>
        </form>
      </div>
    </div>
  </nav>

  <div class="container">
    <h2>Toy Information</h2>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Product Name</th>
          <th width="100">Product Image</th>
          <th width="100">Product Date</th>
          <th width="100">Product Price</th>
          <th width="100">Product Size</th>
          <th width="200" colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < products.length; i++) { %>
          <tr>
            <td><a href="/product/<%= products[i].productID %>"><%= products[i].product_name %></a></td>
            <td><img src="<%= products[i].image %>" alt="product image" /></td>
            <td><%= new Date(products[i].dob).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
            <td>$<%= products[i].price.toFixed(2) %></td>
            <td><%= products[i].size %></td>
            <td><a href="/editproduct/<%= products[i].productID %>">Edit</a></td>
            <td><a href="/deleteproduct/<%= products[i].productID %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <a class="btn btn-primary" href="/">Log out</a>
    <a class="btn btn-primary" href="/dashboard">User Dashboard</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
